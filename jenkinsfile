pipeline {
    agent any
    stages {
        stage('checkout') { 
            steps {
              sh "git clone https://github.com/sharath-st/hello-world-war.git"
            }
        }
stage('build') { 
            steps {
              sh "mvn clean package"
            }
        }
stage('deploy') {
            steps {
            sh "cp /home/slave2/jenkins/workspace/jenkins/target/hello-world-war-1.0.0.war /opt/apache-tomcat-9.0.60/webapps"
            }
        }
      }        
    }
